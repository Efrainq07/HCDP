<HCDPLayout>:
	rows: 1
	columns: 2
	spacing:20
	medidoractual:medidoractual
	servidoractual:servidoractual
	StackLayout:
		size_hint_x:.3
		orientation: 'tb-lr'
		canvas:
			Color:
				rgba: 80/255,80/255,80/255,1
			Rectangle:
				pos: self.pos
				size: self.size
		StackLayout:
			orientation:'bt-lr'
			size_hint_x:1
			size_hint_y:1
			BoxLayout:
				size_hint_y:.15
				Image:
					allow_stretch:True
					keep_ratio: False
					source:'fermaca.png'
			BoxLayout:
				size_hint_y:.05
				Label:
					text: "Medidor:"
					size_hint_x:.2
				Spinner:
					id: medidoractual
					on_press:
						medidoractual.values=[str(i) for i in root.abreArchivoCSV('configMedidor.csv')['nombreMedidor'].tolist()]
					size_hint_x:.6
					values: [str(i) for i in root.abreArchivoCSV('configMedidor.csv')['nombreMedidor'].tolist()]
			BoxLayout:
				size_hint_y:.05
				Label:
					text: "Servidor:"
					size_hint_x:.2
				Spinner:
					id: servidoractual
					on_press:
						servidoractual.values=[str(i) for i in root.abreArchivoCSV('configServidor.csv')['eqRemoto'].tolist()]
					on_text:
						root.conexionServidor(servidoractual.text)
					size_hint_x:.6
					values: [str(i) for i in root.abreArchivoCSV('configServidor.csv')['eqRemoto'].tolist()]