<HCDPStackLayout>:
	orientation: 'lr-tb'
	rows: 1
	columns: 2
	padding:10
	scpacing:10
	Image:
		allow_stretch:True
		size_hint_x:.7
		source: 'envelope.png'
	StackLayout:
		size_hint_x:.3
		orientation: 'tb-lr'
		spacing:10
		padding: 10
		Button: 
			text: "Configurar Medidor"
			size_hint_y:.1
			on_release: root.abrirConfigMedidor()
		Button:
			text: "Configurar Servidor"
			size_hint_y:.1
			on_release: root.abrirConfigServidor()
