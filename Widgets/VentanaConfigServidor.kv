<VentanaConfigServidor>:
	password: password
	user: user
	eqremoto:eqremoto
	dirip:dirip
	inst:inst
	reqpass:reqpass
	
	size_hint:.45,.6
	title_size:20
	title: "Configuración de Servidor"
	BoxLayout:
		spacing:20
		orientation: 'vertical'
		
		BoxLayout:
			Label:
				text: "Equipo Remoto:"
				size_hint_x:.4
				size_hint_y:None
				height:dp(30)
			TextInput:
				id: eqremoto
				size_hint_y:None
				height:dp(30)
				multiline: False
				
		BoxLayout:
			Label:
				text: "Dirección IP:"
				size_hint_x:.4
				size_hint_y:None
				height:dp(30)
			TextInput:
				id: dirip
				size_hint_y:None
				height:dp(30)
				multiline: False
				
		BoxLayout:
			Label:
				text: "Instancia:"
				size_hint_x:.4
				size_hint_y:None
				height:dp(30)
			TextInput:
				id: inst
				size_hint_y:None
				height:dp(30)
				multiline: False
				
		BoxLayout:
			Label:
				text: "¿Requiere contraseña?:"
				size_hint_x:.4
				size_hint_y:None
				height:dp(30)
			CheckBox:
				id:reqpass
				on_active:
					root.toggleRequiereUser()
				color: 200,200,200,1
				
		BoxLayout:
			Label:
				text: "Usuario:"
				size_hint_x:.4
				size_hint_y:None
				height:dp(30)
			TextInput:
				id: user
				size_hint_y:None
				height:dp(30)
				multiline: False
				readonly: True
				
		BoxLayout:
			Label:
				text: "Contraseña:"
				size_hint_x:.4
				size_hint_y:None
				height:dp(30)
			TextInput:
				id: password
				size_hint_y:None
				height:dp(30)
				multiline: False
				readonly: True
				
		BoxLayout:
			Button:
				text: "Guardar"
				size_hint_y:None
				height:dp(50)
				on_release: 
					root.guardaDatos()
					root.dismiss()
			Button:
				text: "Cancelar"
				size_hint_y:None
				height:dp(50)
				on_release:
					root.dismiss()
	
