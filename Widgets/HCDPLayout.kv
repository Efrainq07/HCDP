<HCDPLayout>:
	rows: 1
	columns: 2
	spacing:20
	
	StackLayout:
		size_hint_x:.3
		orientation: 'tb-lr'
		canvas:
			Color:
				rgba: 83/255,81/255,86/255,1
			Rectangle:
				pos: self.pos
				size: self.size
		Button: 
			text: "Configurar Medidor"
			size_hint_y:None
			height:dp(40)
			on_release: root.abrirConfigMedidor()
		Button:
			text: "Configurar Servidor"
			size_hint_y:None
			height:dp(40)
			on_release: root.abrirConfigServidor()

		StackLayout:
			orientation:'bt-lr'
			size_hint_x:1
			size_hint_y:.9
			BoxLayout:
				size_hint_y:.15
				Image:
					allow_stretch:True
					keep_ratio: False
					source:'fermaca.png'
			BoxLayout:
				size_hint_y:None
				height:dp(40)
				Label:
					text: "Medidor:"
					size_hint_x:.2
					size_hint_y:None
					height:dp(40)
				Spinner:
					id: medidoractual
					size_hint_x:.6
					size_hint_y:None
					height:dp(40)
					values: root.abreArchivoCSV('configMedidor.csv')['nombreMedidor'].tolist()
			BoxLayout:
				size_hint_y:None
				height:dp(40)
				Label:
					text: "Servidor:"
					size_hint_x:.2
					size_hint_y:None
					height:dp(40)
				Spinner:
					id: medidoractual
					size_hint_x:.6
					size_hint_y:None
					height:dp(40)
					values: root.abreArchivoCSV('configServidor.csv')['eqRemoto'].tolist()