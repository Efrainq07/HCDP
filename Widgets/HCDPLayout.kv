<HCDPLayout>:
	rows: 1
	columns: 2
	spacing:20
	medidoractual:medidoractual
	servidoractual:servidoractual
	StackLayout:
		size_hint_x:.3
		orientation: 'tb-lr'
		canvas:
			Color:
				rgba: 83/255,81/255,86/255,1
			Rectangle:
				pos: self.pos
				size: self.size
		Button: 
			text: "Configurar Medidor"
			size_hint_y:.05
			on_release: root.abrirConfigMedidor()
		Button:
			text: "Configurar Servidor"
			size_hint_y:.05
			on_release: root.abrirConfigServidor()

		StackLayout:
			orientation:'bt-lr'
			size_hint_x:1
			size_hint_y:.9
			BoxLayout:
				size_hint_y:.15
				Image:
					allow_stretch:True
					keep_ratio: False
					source:'fermaca.png'
			BoxLayout:
				size_hint_y:.05
				Label:
					text: "Medidor:"
					size_hint_x:.2
				Spinner:
					id: medidoractual
					on_press:
						medidoractual.values=root.abreArchivoCSV('configMedidor.csv')['nombreMedidor'].tolist()
					size_hint_x:.6
					values: root.abreArchivoCSV('configMedidor.csv')['nombreMedidor'].tolist()
			BoxLayout:
				size_hint_y:.05
				Label:
					text: "Servidor:"
					size_hint_x:.2
				Spinner:
					id: servidoractual
					on_press:
						servidoractual.values=root.abreArchivoCSV('configServidor.csv')['eqRemoto'].tolist()
					on_text:
						root.conexionServidor(servidoractual.text)
					size_hint_x:.6
					values: root.abreArchivoCSV('configServidor.csv')['eqRemoto'].tolist()